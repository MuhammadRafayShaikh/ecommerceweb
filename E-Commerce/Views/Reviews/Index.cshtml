                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-status="@ViewBag.Status"
                       asp-route-search="@ViewBag.SearchTerm"
                       class="page-link @(i == ViewBag.CurrentPage ? "active" : "")">
                        @i
