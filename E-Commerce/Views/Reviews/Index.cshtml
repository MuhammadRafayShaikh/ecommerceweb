                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button class="btn-icon btn-reject" onclick="rejectReview(@review.Id)" title="Reject">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
                                    else if (review.Status == ProductReview.ReviewStatus.Approved)
                                    {
                                        <button class="btn-icon btn-reject" onclick="rejectReview(@review.Id)" title="Reject">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    }
