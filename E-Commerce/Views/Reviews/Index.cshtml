<script>
    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
        loadStats();

        // Toggle sidebar for mobile
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
        });

        // Initialize filters from URL
        initializeFilters();
    });

    // Load statistics
    async function loadStats() {
        try {
            const response = await fetch('/Reviews/GetStats');
            const stats = await response.json();

            const statsContainer = document.getElementById('statsContainer');
            statsContainer.innerHTML = `
                <div class="stat-card pending" onclick="filterByStatus('pending')">
                    <div class="stat-icon pending">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.pending}</h3>
                        <p>Pending Reviews</p>
                        <span class="stat-trend trend-up">Requires Action</span>
                    </div>
                </div>
                <div class="stat-card approved" onclick="filterByStatus('approved')">
                    <div class="stat-icon approved">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.approved}</h3>
                        <p>Approved Reviews</p>
                        <span class="stat-trend trend-up">${stats.avgRating.toFixed(1)} Avg Rating</span>
                    </div>
                </div>
                <div class="stat-card rejected" onclick="filterByStatus('rejected')">
                    <div class="stat-icon rejected">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.rejected}</h3>
                        <p>Rejected Reviews</p>
                        <span class="stat-trend trend-down">Not Displayed</span>
                    </div>
                </div>
                <div class="stat-card total" onclick="filterByStatus('all')">
                    <div class="stat-icon total">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.total}</h3>
                        <p>Total Reviews</p>
                        <span class="stat-trend trend-up">${stats.today} New Today</span>
                    </div>
                </div>
            `;

            // Highlight active filter
            const status = getUrlParameter('status') || 'all';
            document.querySelectorAll('.stat-card').forEach(card => {
                card.classList.remove('active');
            });

            const activeCard = document.querySelector(`.stat-card.${status}`);
            if (activeCard) {
                activeCard.classList.add('active');
            }
        } catch (error) {
            console.error('Error loading stats:', error);
        }
    }

    // Initialize filters from URL
    function initializeFilters() {
        const status = getUrlParameter('status');
        const search = getUrlParameter('search');

        if (status) {
            document.getElementById('statusFilter').value = status;
        }

        if (search) {
            document.querySelector('input[name="search"]').value = search;
        }
    }

    // Get URL parameter
    function getUrlParameter(name) {
        name = name.replace(/[\[\]]/g, '\\$&');
        const regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)');
        const results = regex.exec(window.location.href);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

    // Filter reviews
    function filterReviews() {
        const status = document.getElementById('statusFilter').value;
        const sort = document.getElementById('sortFilter').value;
        const search = document.querySelector('input[name="search"]').value;

        let url = `/Reviews?status=${status}&search=${encodeURIComponent(search)}`;

        // Add sort parameter if needed
        if (sort !== 'newest') {
            url += `&sort=${sort}`;
        }

        window.location.href = url;
    }

    // Filter by status from stats cards
    function filterByStatus(status) {
        document.getElementById('statusFilter').value = status;
        filterReviews();
    }

    // Clear filters
    function clearFilters() {
        document.getElementById('statusFilter').value = 'all';
        document.getElementById('sortFilter').value = 'newest';
        document.querySelector('input[name="search"]').value = '';
        filterReviews();
    }

    // Search with debounce
    let searchTimeout;
    function debounceSearch() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            filterReviews();
        }, 500);
    }

    // Refresh reviews
    function refreshReviews() {
        window.location.reload();
    }

    // View review details
    async function viewReview(reviewId) {
        showLoading(true);

        try {
            const response = await fetch('/Reviews/Details/' + reviewId);
            if (!response.ok) throw new Error('Failed to load review details');

            const html = await response.text();
            document.getElementById('reviewDetails').innerHTML = html;
            document.getElementById('reviewModal').style.display = 'block';
        } catch (error) {
            console.error('Error loading review details:', error);
            showNotification('Failed to load review details', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Approve review
    async function approveReview(reviewId) {
        if (!confirm('Are you sure you want to approve this review?')) {
            return;
        }

        showLoading(true);

        try {

                $.ajax({
                    url: `/Reviews/Approve/${reviewId}`,
                    type: "POST",
                    success: function (result) {
                        if (result.success) {
                            updateReviewStatus(reviewId, result.status, result.statusClass);
                            showNotification(result.message, 'success');
                            loadStats();
                        } else {
                            showNotification(result.message, 'danger');
                        }
                    }
                });


            // const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            // const response = await fetch(`/Reviews/Approve/${reviewId}`, {
            //     method: 'POST',
            //     headers: {
            //         'Content-Type': 'application/json',
            //         'RequestVerificationToken': token || ''
            //     }
            // });

            // const result = await response.json();

            // if (result.success) {
            //     updateReviewStatus(reviewId, result.status, result.statusClass);
            //     showNotification(result.message, 'success');
            //     loadStats(); Refresh stats
            // } else {
            //     showNotification(result.message, 'danger');
            // }
        } catch (error) {
            console.error('Error approving review:', error);
            showNotification('Failed to approve review', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Reject review
    async function rejectReview(reviewId) {
        if (!confirm('Are you sure you want to reject this review?')) {
            return;
        }

        showLoading(true);

        try {

            $.ajax({
                url: `/Reviews/Reject/${reviewId}`,
                type : "POST",
                success: function(result){
                        if (result.success) {
                            updateReviewStatus(reviewId, result.status, result.statusClass);
                            showNotification(result.message, 'success');
                            loadStats(); // Refresh stats
                        } else {
                            showNotification(result.message, 'danger');
                        }
                }
            })
            // const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            // const response = await fetch(`/Reviews/Reject/${reviewId}`, {
            //     method: 'POST',
            //     headers: {
            //         'Content-Type': 'application/json',
            //         'RequestVerificationToken': token || ''
            //     }
            // });

            // const result = await response.json();

            
        } catch (error) {
            console.error('Error rejecting review:', error);
            showNotification('Failed to reject review', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Delete review
    async function deleteReview(reviewId) {
        if (!confirm('Are you sure you want to delete this review? This action cannot be undone.')) {
            return;
        }

        showLoading(true);

        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            const response = await fetch(`/Reviews/Delete/${reviewId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token || ''
                }
            });

            const result = await response.json();

            if (result.success) {
                // Remove row from table
                const row = document.getElementById(`review-${reviewId}`);
                if (row) {
                    row.style.opacity = '0.5';
                    row.style.transition = 'opacity 0.3s ease';
                    setTimeout(() => row.remove(), 300);
                }

                showNotification(result.message, 'warning');
                loadStats(); // Refresh stats
                updateSelection(); // Update bulk actions
            } else {
                showNotification(result.message, 'danger');
            }
        } catch (error) {
            console.error('Error deleting review:', error);
            showNotification('Failed to delete review', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Update review status in UI
    function updateReviewStatus(reviewId, status, statusClass) {
        const row = document.getElementById(`review-${reviewId}`);
        if (!row) return;

        // Update status badge
        const statusCell = row.querySelector('.status-badge');
        if (statusCell) {
            statusCell.className = `status-badge status-${statusClass}`;
            statusCell.textContent = status;
        }

        // Update action buttons
        const actionCell = row.querySelector('.action-buttons');
        if (actionCell) {
            if (status === 'Approved') {
                actionCell.innerHTML = `
                    <button class="btn-icon btn-view" onclick="viewReview(${reviewId})" title="View Details">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn-icon btn-reject" onclick="rejectReview(${reviewId})" title="Reject">
                        <i class="fas fa-times"></i>
                    </button>
                    <button class="btn-icon btn-delete" onclick="deleteReview(${reviewId})" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                `;
            } else if (status === 'Rejected') {
                actionCell.innerHTML = `
                    <button class="btn-icon btn-view" onclick="viewReview(${reviewId})" title="View Details">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn-icon btn-approve" onclick="approveReview(${reviewId})" title="Approve">
                        <i class="fas fa-check"></i>
                    </button>
                    <button class="btn-icon btn-delete" onclick="deleteReview(${reviewId})" title="Delete">
                        <i class="fas fa-trash"></i>
                    </button>
                `;
            }
        }
    }

    // Bulk selection
    function toggleSelectAll() {
        const selectAll = document.getElementById('selectAllCheckbox').checked;
        document.querySelectorAll('.review-select').forEach(checkbox => {
            checkbox.checked = selectAll;
        });
        updateSelection();
    }

    function selectAll() {
        document.getElementById('selectAllCheckbox').checked = true;
        toggleSelectAll();
    }

    function updateSelection() {
        const selected = document.querySelectorAll('.review-select:checked');
        const selectedCount = selected.length;
        const totalCount = document.querySelectorAll('.review-select').length;

        document.getElementById('selectedCount').textContent = `${selectedCount} reviews selected`;
        document.getElementById('selectAllCheckbox').checked = selectedCount === totalCount;

        // Show/hide bulk actions
        const bulkActions = document.getElementById('bulkActions');
        if (selectedCount > 0) {
            bulkActions.classList.add('active');
        } else {
            bulkActions.classList.remove('active');
        }
    }

    function clearSelection() {
        document.querySelectorAll('.review-select').forEach(checkbox => {
            checkbox.checked = false;
        });
        document.getElementById('selectAllCheckbox').checked = false;
        updateSelection();
    }

    // Bulk action
    async function bulkAction(action) {
        const selected = document.querySelectorAll('.review-select:checked');
        if (selected.length === 0) {
            showNotification('Please select at least one review.', 'warning');
            return;
        }

        const confirmMessage = action === 'approve' ? 'Approve selected reviews?' :
                             action === 'reject' ? 'Reject selected reviews?' :
                             'Delete selected reviews? This action cannot be undone.';

        if (!confirm(confirmMessage)) {
            return;
        }

        showLoading(true);

        const reviewIds = Array.from(selected).map(checkbox => parseInt(checkbox.value));

        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            const response = await fetch('/Reviews/BulkAction', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token || ''
                },
                body: JSON.stringify({ action, reviewIds })
            });

            const result = await response.json();

            if (result.success) {
                showNotification(result.message, 'success');

                // Refresh page after bulk actions
                if (action === 'delete') {
                    setTimeout(() => location.reload(), 1500);
                } else {
                    // Update status for approved/rejected reviews
                    reviewIds.forEach(id => {
                        const status = action === 'approve' ? 'Approved' : 'Rejected';
                        const statusClass = action;
                        updateReviewStatus(id, status, statusClass);
                    });

                    clearSelection();
                    loadStats(); // Refresh stats
                }
            } else {
                showNotification(result.message, 'danger');
            }
        } catch (error) {
            console.error('Error performing bulk action:', error);
            showNotification('Failed to perform bulk action', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Close modal
    function closeModal() {
        document.getElementById('reviewModal').style.display = 'none';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('reviewModal');
        if (event.target === modal) {
            closeModal();
        }
    };

    // Show loading overlay
    function showLoading(show) {
        const overlay = document.getElementById('loadingOverlay');
        if (overlay) {
            overlay.style.display = show ? 'flex' : 'none';
        }
    }

    // Notification function
    function showNotification(message, type) {
        // Remove existing notifications
        document.querySelectorAll('.custom-notification').forEach(n => n.remove());

        // Create notification element
        const notification = document.createElement('div');
        notification.className = 'custom-notification';
        notification.style.cssText = `
            position: fixed;
            top: 30px;
            right: 30px;
            padding: 18px 25px;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            z-index: 3000;
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            animation: slideInRight 0.3s ease;
            display: flex;
            align-items: center;
            gap: 12px;
            font-family: 'Poppins', sans-serif;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
        `;

        // Set color based on type
        const colors = {
            'success': 'linear-gradient(135deg, var(--success), #2e7d32)',
            'warning': 'linear-gradient(135deg, var(--warning), #ff8f00)',
            'info': 'linear-gradient(135deg, var(--info), #1565c0)',
            'danger': 'linear-gradient(135deg, var(--danger), #c62828)'
        };

        notification.style.background = colors[type] || 'linear-gradient(135deg, var(--primary), var(--primary-dark))';

        // Add icon based on type
        const icons = {
            'success': 'check-circle',
            'warning': 'exclamation-triangle',
            'info': 'info-circle',
            'danger': 'times-circle'
        };

        notification.innerHTML = `<i class="fas fa-${icons[type] || 'info-circle'}"></i> ${message}`;

        // Add to document
        document.body.appendChild(notification);

        // Add animation
        const style = document.createElement('style');
        style.textContent = `
    @@keyframes slideInRight {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
    @@keyframes fadeOut {
                from { opacity: 1; transform: translateX(0); }
                to { opacity: 0; transform: translateX(100%); }
            }
        `;
        document.head.appendChild(style);

        // Remove after 4 seconds
        setTimeout(() => {
            notification.style.animation = 'fadeOut 0.3s ease';
            setTimeout(() => {
                if (notification.parentNode) {
                    document.body.removeChild(notification);
                }
            }, 300);
        }, 4000);
    }
</script>