@model E_Commerce.Models.DbTables.Contact

<div class="contact-details-view">
    <!-- Header -->
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px; padding-bottom: 20px; border-bottom: 2px solid #f5f5f5;">
        <div>
            <h2 style="color: var(--dark); font-size: 24px; margin-bottom: 5px;">@Model.Subject</h2>
            <div style="display: flex; gap: 15px; align-items: center;">
                <span style="padding: 6px 15px; border-radius: 20px; font-size: 13px; font-weight: 500;
                      @(!Model.IsRead ? "background: rgba(244, 67, 54, 0.1); color: var(--danger);" :
                        Model.IsResponded ? "background: rgba(76, 175, 80, 0.1); color: var(--success);" :
                        "background: rgba(33, 150, 243, 0.1); color: var(--info);")">
                    @(!Model.IsRead ? "Unread" : Model.IsResponded ? "Responded" : "Read")
                </span>
                <span style="color: #666; font-size: 14px;">
                    <i class="far fa-clock" style="margin-right: 5px;"></i>
                    @Model.SubmittedAt.ToString("MMMM dd, yyyy hh:mm tt")
                </span>
            </div>
        </div>
        <div style="display: flex; gap: 10px;">
            @if (!Model.IsResponded)
            {
                <button class="btn btn-success" onclick="markAsResponded(@Model.Id)">
                    <i class="fas fa-check"></i> Mark as Responded
                </button>
                <button class="btn btn-primary" onclick="showReplyModal(@Model.Id)">
                    <i class="fas fa-reply"></i> Quick Reply
                </button>
            }
            <button class="btn btn-outline" onclick="deleteMessage(@Model.Id)">
                <i class="fas fa-trash"></i> Delete
            </button>
        </div>
    </div>

    <!-- Sender Information -->
    <div style="background: #f9f9f9; padding: 20px; border-radius: 12px; margin-bottom: 25px; border: 1px solid #eee;">
        <h3 style="color: var(--dark); font-size: 16px; margin-bottom: 15px; display: flex; align-items: center; gap: 10px;">
            <i class="fas fa-user"></i> Sender Information
        </h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
            <div>
                <div style="font-size: 13px; color: #777; margin-bottom: 5px;">Full Name</div>
                <div style="font-weight: 600; color: var(--dark); font-size: 16px;">@Model.FullName</div>
            </div>
            <div>
                <div style="font-size: 13px; color: #777; margin-bottom: 5px;">Email Address</div>
                <div style="font-weight: 600; color: var(--dark); font-size: 16px;">
                    <a href="mailto:@Model.Email" style="color: var(--primary); text-decoration: none;">@Model.Email</a>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Phone))
            {
                <div>
                    <div style="font-size: 13px; color: #777; margin-bottom: 5px;">Phone Number</div>
                    <div style="font-weight: 600; color: var(--dark); font-size: 16px;">
                        <a href="tel:@Model.Phone" style="color: var(--primary); text-decoration: none;">@Model.Phone</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Message Content -->
    <div style="background: white; padding: 25px; border-radius: 12px; border: 1px solid #eee; margin-bottom: 25px;">
        <h3 style="color: var(--dark); font-size: 16px; margin-bottom: 15px; display: flex; align-items: center; gap: 10px;">
            <i class="fas fa-envelope"></i> Message Content
        </h3>
        <div style="color: #555; line-height: 1.6; font-size: 15px; white-space: pre-wrap;">@Model.Message</div>
    </div>

    <!-- Message Metadata -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-top: 30px; padding-top: 20px; border-top: 1px solid #eee;">
        <div>
            <div style="font-size: 13px; color: #777; margin-bottom: 5px;">Message ID</div>
            <div style="font-weight: 500; color: var(--dark);">#@Model.Id</div>
        </div>
        <div>
            <div style="font-size: 13px; color: #777; margin-bottom: 5px;">Submitted Date</div>
            <div style="font-weight: 500; color: var(--dark);">@Model.SubmittedAt.ToString("dddd, MMMM dd, yyyy")</div>
        </div>
        <div>
            <div style="font-size: 13px; color: #777; margin-bottom: 5px;">Submitted Time</div>
            <div style="font-weight: 500; color: var(--dark);">@Model.SubmittedAt.ToString("hh:mm tt")</div>
        </div>
        <div>
            <div style="font-size: 13px; color: #777; margin-bottom: 5px;">Time Since</div>
            <div style="font-weight: 500; color: var(--dark);">@GetTimeSince(Model.SubmittedAt)</div>
        </div>
    </div>
</div>

@functions {
    public string GetTimeSince(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;

        if (timeSpan.TotalDays >= 1)
        {
            return $"{(int)timeSpan.TotalDays} day{(timeSpan.TotalDays >= 2 ? "s" : "")} ago";
        }
        else if (timeSpan.TotalHours >= 1)
        {
            return $"{(int)timeSpan.TotalHours} hour{(timeSpan.TotalHours >= 2 ? "s" : "")} ago";
        }
        else if (timeSpan.TotalMinutes >= 1)
        {
            return $"{(int)timeSpan.TotalMinutes} minute{(timeSpan.TotalMinutes >= 2 ? "s" : "")} ago";
        }
        else
        {
            return "Just now";
        }
    }
}