<!-- Main Content -->
<div class="main-content" id="mainContent">
    <!-- Header -->
    <div class="header">
        <div class="header-title">
            <div class="menu-toggle" id="menuToggle">
                <i class="fas fa-bars"></i>
            </div>
            <h1><i class="fas fa-envelope"></i> Contact Messages</h1>
        </div>

        <div class="header-controls">
            <div class="admin-profile">
                <div class="admin-avatar">AS</div>
                <div class="admin-info">
                    <h3>Admin Sharma</h3>
                    <p>Store Manager</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-container" id="statsContainer">
        <!-- Stats will be loaded via AJAX -->
    </div>

    <!-- Filters Bar -->
    <div class="filters-container">
        <div class="filters-header">
            <h3><i class="fas fa-filter"></i> Filter Messages</h3>
            <div class="filter-controls">
                <div class="filter-group">
                    <span class="filter-label">Status:</span>
                    <select class="filter-select" id="statusFilter" onchange="filterMessages()">

                        @if (ViewBag.Status == "all")
                        {
                            <option value="all" selected>All Messages</option>
                        }
                        else
                        {
                            <option value="all">All Messages</option>
                        }

                        @if (ViewBag.Status == "unread")
                        {
                            <option value="unread" selected>Unread</option>
                        }
                        else
                        {
                            <option value="unread">Unread</option>
                        }

                        @if (ViewBag.Status == "read")
                        {
                            <option value="read" selected>Read</option>
                        }
                        else
                        {
                            <option value="read">Read</option>
                        }

                        @if (ViewBag.Status == "responded")
                        {
                            <option value="responded" selected>Responded</option>
                        }
                        else
                        {
                            <option value="responded">Responded</option>
                        }

                        @if (ViewBag.Status == "urgent")
                        {
                            <option value="urgent" selected>Urgent</option>
                        }
                        else
                        {
                            <option value="urgent">Urgent</option>
                        }

                    </select>


                </div>

                <div class="filter-group">
                    <span class="filter-label">Sort By:</span>
                    <select class="filter-select" id="sortFilter" onchange="filterMessages()">
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="name">Name A-Z</option>
                        <option value="email">Email A-Z</option>
                    </select>
                </div>

                <div class="search-box">
                    <form method="get" id="searchForm" action="/AdminContact">
                        <i class="fas fa-search"></i>
                        <input type="text" name="search" value="@ViewBag.SearchTerm" placeholder="Search messages, names, emails, or subjects..." onkeyup="debounceSearch()">
                    </form>
                </div>

                <button class="btn btn-outline" onclick="clearFilters()">
                    <i class="fas fa-times"></i> Clear
                </button>
            </div>
        </div>

        <!-- Bulk Actions -->
        <div class="bulk-actions" id="bulkActions">
            <span class="bulk-count" id="selectedCount">0 messages selected</span>
            <button class="btn btn-info" onclick="bulkAction('read')">
                <i class="fas fa-eye"></i> Mark as Read
            </button>
            <button class="btn btn-success" onclick="bulkAction('responded')">
                <i class="fas fa-reply"></i> Mark as Responded
            </button>
            <button class="btn btn-danger" onclick="bulkAction('delete')">
                <i class="fas fa-trash"></i> Delete Selected
            </button>
            <button class="btn btn-outline" onclick="clearSelection()">
                <i class="fas fa-times-circle"></i> Clear Selection
            </button>
        </div>
    </div>

    <!-- Messages Table -->
    <div class="messages-table-container">
        <div class="table-header">
            <h2><i class="fas fa-inbox"></i> Contact Messages</h2>
            <div class="table-controls">
                <button class="btn btn-primary" onclick="selectAll()">
                    <i class="fas fa-check-square"></i> Select All
                </button>
                <button class="btn btn-outline" onclick="refreshMessages()">
                    <i class="fas fa-sync-alt"></i> Refresh
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="messages-table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAllCheckbox" class="message-checkbox" onchange="toggleSelectAll()">
                        </th>
                        <th>Contact</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Status</th>
                        <th>Received</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="messagesTableBody">
                    @foreach (var contact in Model)
                    {
                        var isUrgent = contact.Subject.ToLower().Contains("urgent") || 
                                       contact.Subject.ToLower().Contains("important") ||
                                       contact.Message.ToLower().Contains("urgent") ||
                                       contact.Message.ToLower().Contains("asap") ||
                                       contact.Message.ToLower().Contains("important");
                        
                        <tr id="contact-@contact.Id" class="@(!contact.IsRead ? "unread" : "") @(isUrgent ? "urgent" : "")">
                            <td>
                                <input type="checkbox" class="message-checkbox message-select" value="@contact.Id" onchange="updateSelection()">
                            </td>
                            <td>
                                <div class="contact-info">
                                    <div class="contact-avatar">
                                        @contact.FullName.Split(' ').Select(n => n[0]).Take(2).Aggregate("", (a, b) => a + b)
                                    </div>
                                    <div class="contact-details">
                                        <div class="contact-name">
                                            @contact.FullName
                                            @if (isUrgent && !contact.IsResponded)
                                            {
                                                <i class="fas fa-exclamation-circle" style="color: var(--warning); margin-left: 5px; font-size: 12px;" title="Urgent"></i>
                                            }
                                        </div>
                                        <div class="contact-email">@contact.Email</div>
                                        @if (!string.IsNullOrEmpty(contact.Phone))
                                        {
                                            <div class="contact-phone">@contact.Phone</div>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="message-content">
                                    <div class="message-subject">@contact.Subject</div>
                                </div>
                            </td>
                            <td>
                                <div class="message-content">
                                    <div class="message-excerpt">
                                        @if (contact.Message.Length > 100)
                                        {
                                            @contact.Message.Substring(0, 100)
                                            <span style="color: #aaa;">...read more</span>
                                        }
                                        else
                                        {
                                            @contact.Message
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (isUrgent && !contact.IsResponded)
                                {
                                    <span class="status-badge status-urgent">Urgent</span>
                                }
                                else if (!contact.IsRead)
                                {
                                    <span class="status-badge status-unread">Unread</span>
                                }
                                else if (contact.IsResponded)
                                {
                                    <span class="status-badge status-responded">Responded</span>
                                }
                                else
                                {
                                    <span class="status-badge status-read">Read</span>
                                }
                            </td>
                            <td>
                                <div class="time-badge">
                                    <span class="date">@contact.SubmittedAt.ToString("MMM dd, yyyy")</span>
                                    <span class="time">@contact.SubmittedAt.ToString("hh:mm tt")</span>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-icon btn-view" onclick="viewMessage(@contact.Id)" title="View Message">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    @if (!contact.IsRead)
                                    {
                                        <button class="btn-icon btn-read" onclick="markAsRead(@contact.Id)" title="Mark as Read">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    }
                                    @if (!contact.IsResponded)
                                    {
                                        <button class="btn-icon btn-respond" onclick="markAsResponded(@contact.Id)" title="Mark as Responded">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button class="btn-icon btn-reply" onclick="showReplyModal(@contact.Id)" title="Quick Reply">
                                            <i class="fas fa-reply"></i>
                                        </button>
                                    }
                                    <button class="btn-icon btn-delete" onclick="deleteMessage(@contact.Id)" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>No messages found</h3>
                <p>@(string.IsNullOrEmpty(ViewBag.SearchTerm) ? "There are no contact messages yet." : "No messages match your search.")</p>
            </div>
        }

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <a asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       asp-route-status="@ViewBag.Status"
                       asp-route-search="@ViewBag.SearchTerm"
                       class="page-link">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-status="@ViewBag.Status"
                       asp-route-search="@ViewBag.SearchTerm"
                       class="page-link @(i == ViewBag.CurrentPage ? "active" : "")">
                        @i
                    </a>
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a asp-action="Index"
                       asp-route-page="@(ViewBag.CurrentPage + 1)"
                       asp-route-status="@ViewBag.Status"
                       asp-route-search="@ViewBag.SearchTerm"
                       class="page-link">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                }
            </div>
        }
    </div>

    <!-- Message Details Modal -->
    <div class="modal" id="messageModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-envelope"></i> Message Details</h3>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div class="modal-body" id="messageDetails">
                <!-- Message details will be loaded here -->
            </div>
        </div>
    </div>

    <!-- Reply Modal -->
    <div class="modal reply-modal" id="replyModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-reply"></i> Quick Reply</h3>
                <button class="modal-close" onclick="closeReplyModal()">&times;</button>
            </div>
            <div class="modal-body">
                <form id="replyForm" class="reply-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="replyContactId">
                    
                    <div class="form-group">
                        <label class="form-label" for="replyTo">To:</label>
                        <input type="text" class="form-control" id="replyTo" readonly>
