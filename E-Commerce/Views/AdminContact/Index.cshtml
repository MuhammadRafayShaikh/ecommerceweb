                        <input type="text" class="form-control" id="replySubject" value="Re: " readonly>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label" for="replyMessage">Message:</label>
                        <textarea class="form-control" id="replyMessage" rows="8" placeholder="Type your reply here..." required></textarea>
                    </div>
                    
                    <div style="display: flex; gap: 15px; margin-top: 20px;">
                        <button type="button" class="btn btn-outline" onclick="closeReplyModal()" style="flex: 1;">Cancel</button>
                        <button type="submit" class="btn btn-primary" style="flex: 1;">
                            <i class="fas fa-paper-plane"></i> Send Reply
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-spinner"></div>
    </div>


<script>
    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
        loadStats();
        
        // Toggle sidebar for mobile
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('active');
        });
        
        // Initialize filters from URL
        initializeFilters();
        
        // Setup reply form
        document.getElementById('replyForm').addEventListener('submit', function(e) {
            e.preventDefault();
            sendReply();
        });
    });

    // Load statistics
    async function loadStats() {
        try {
            const response = await fetch('/AdminContact/GetStats');
            const stats = await response.json();

            const statsContainer = document.getElementById('statsContainer');
            statsContainer.innerHTML = `
                <div class="stat-card unread" onclick="filterByStatus('unread')">
                    <div class="stat-icon unread">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.unread}</h3>
                        <p>Unread Messages</p>
                        <span class="stat-trend trend-up">Requires Attention</span>
                    </div>
                </div>
                <div class="stat-card read" onclick="filterByStatus('read')">
                    <div class="stat-icon read">
                        <i class="fas fa-eye"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.read}</h3>
                        <p>Read Messages</p>
                        <span class="stat-trend trend-up">Awaiting Response</span>
                    </div>
                </div>
                <div class="stat-card responded" onclick="filterByStatus('responded')">
                    <div class="stat-icon responded">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.responded}</h3>
                        <p>Responded</p>
                        <span class="stat-trend trend-up">Completed</span>
                    </div>
                </div>
                <div class="stat-card urgent" onclick="filterByStatus('urgent')">
                    <div class="stat-icon urgent">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.urgent}</h3>
                        <p>Urgent Messages</p>
                        <span class="stat-trend trend-up">Priority</span>
                    </div>
                </div>
                <div class="stat-card total" onclick="filterByStatus('all')">
                    <div class="stat-icon total">
                        <i class="fas fa-inbox"></i>
                    </div>
                    <div class="stat-info">
                        <h3>${stats.total}</h3>
                        <p>Total Messages</p>
                        <span class="stat-trend trend-up">${stats.today} New Today</span>
                    </div>
                </div>
            `;
            
            // Highlight active filter
            const status = getUrlParameter('status') || 'all';
            document.querySelectorAll('.stat-card').forEach(card => {
                card.classList.remove('active');
            });
            
            const activeCard = document.querySelector(`.stat-card.${status}`);
            if (activeCard) {
                activeCard.classList.add('active');
            }
        } catch (error) {
            console.error('Error loading stats:', error);
        }
    }

    // Initialize filters from URL
    function initializeFilters() {
        const status = getUrlParameter('status');
        const search = getUrlParameter('search');
        
        if (status) {
            document.getElementById('statusFilter').value = status;
        }
        
        if (search) {
            document.querySelector('input[name="search"]').value = search;
        }
    }

    // Get URL parameter
    function getUrlParameter(name) {
        name = name.replace(/[\[\]]/g, '\\$&');
        const regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)');
        const results = regex.exec(window.location.href);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, ' '));
    }

    // Filter messages
    function filterMessages() {
        const status = document.getElementById('statusFilter').value;
        const sort = document.getElementById('sortFilter').value;
        const search = document.querySelector('input[name="search"]').value;
        
        let url = `/AdminContact?status=${status}&search=${encodeURIComponent(search)}`;
        
        // Add sort parameter if needed
        if (sort !== 'newest') {
            url += `&sort=${sort}`;
        }
        
        window.location.href = url;
    }

    // Filter by status from stats cards
    function filterByStatus(status) {
        document.getElementById('statusFilter').value = status;
        filterMessages();
    }

    // Clear filters
    function clearFilters() {
        document.getElementById('statusFilter').value = 'all';
        document.getElementById('sortFilter').value = 'newest';
        document.querySelector('input[name="search"]').value = '';
        filterMessages();
    }

    // Search with debounce
    let searchTimeout;
    function debounceSearch() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            filterMessages();
        }, 500);
    }

    // Refresh messages
    function refreshMessages() {
        window.location.reload();
    }

    // View message details
    async function viewMessage(contactId) {
        showLoading(true);
        
        try {
            const response = await fetch('/AdminContact/Details/' + contactId);
            if (!response.ok) throw new Error('Failed to load message details');
            
            const html = await response.text();
            document.getElementById('messageDetails').innerHTML = html;
            document.getElementById('messageModal').style.display = 'block';
            
            // Update row status if it was unread
            const row = document.getElementById(`contact-${contactId}`);
            if (row && row.classList.contains('unread')) {
                row.classList.remove('unread');
                const statusCell = row.querySelector('.status-badge');
                if (statusCell) {
                    statusCell.className = 'status-badge status-read';
                    statusCell.textContent = 'Read';
                }
            }
        } catch (error) {
            console.error('Error loading message details:', error);
            showNotification('Failed to load message details', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Mark as read
    async function markAsRead(contactId) {
        showLoading(true);
        
        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            const response = await fetch(`/AdminContact/MarkAsRead/${contactId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token || ''
                }
            });
            
            const result = await response.json();
            
            if (result.success) {
                // Update row UI
                const row = document.getElementById(`contact-${contactId}`);
                if (row) {
                    row.classList.remove('unread');
                    const statusCell = row.querySelector('.status-badge');
                    if (statusCell) {
                        statusCell.className = 'status-badge status-read';
                        statusCell.textContent = 'Read';
                    }
                }
                
                showNotification(result.message, 'success');
                loadStats(); // Refresh stats
            } else {
                showNotification(result.message, 'danger');
            }
        } catch (error) {
            console.error('Error marking as read:', error);
            showNotification('Failed to mark as read', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Mark as responded
    async function markAsResponded(contactId) {
        if (!confirm('Mark this message as responded?')) {
            return;
        }
        
        showLoading(true);
        
        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            const response = await fetch(`/AdminContact/MarkAsResponded/${contactId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token || ''
                }
            });
            
            const result = await response.json();
            
            if (result.success) {
                // Update row UI
                const row = document.getElementById(`contact-${contactId}`);
                if (row) {
                    row.classList.remove('unread');
                    const statusCell = row.querySelector('.status-badge');
                    if (statusCell) {
                        statusCell.className = 'status-badge status-responded';
                        statusCell.textContent = 'Responded';
                    }
                    
                    // Hide respond buttons
                    const actionButtons = row.querySelector('.action-buttons');
                    if (actionButtons) {
                        const respondBtn = actionButtons.querySelector('.btn-respond');
                        const replyBtn = actionButtons.querySelector('.btn-reply');
                        if (respondBtn) respondBtn.remove();
                        if (replyBtn) replyBtn.remove();
                    }
                }
                
                showNotification(result.message, 'success');
                loadStats(); // Refresh stats
            } else {
                showNotification(result.message, 'danger');
            }
        } catch (error) {
            console.error('Error marking as responded:', error);
            showNotification('Failed to mark as responded', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Show reply modal
    async function showReplyModal(contactId) {
        showLoading(true);
        
        try {
            const response = await fetch('/AdminContact/Details/' + contactId);
            if (!response.ok) throw new Error('Failed to load message details');
            
            const html = await response.text();
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = html;
            
            // Extract contact info
            const contactName = tempDiv.querySelector('.contact-name')?.textContent?.trim() || '';
            const contactEmail = tempDiv.querySelector('.contact-email a')?.textContent?.trim() || '';
            const subject = tempDiv.querySelector('.message-subject')?.textContent?.trim() || '';
            
            // Populate reply form
            document.getElementById('replyContactId').value = contactId;
            document.getElementById('replyTo').value = `${contactName} <${contactEmail}>`;
            document.getElementById('replySubject').value = `Re: ${subject}`;
            
            // Show modal
            document.getElementById('replyModal').style.display = 'block';
        } catch (error) {
            console.error('Error loading reply info:', error);
            showNotification('Failed to load message details', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Send reply
        function sendReply() {
            const contactId = $('#replyContactId').val();
            const replyMessage = $('#replyMessage').val();
            alert(contactId)
            if (!replyMessage.trim()) {
                showNotification('Please enter a reply message.', 'warning');
                return;
            }

            showLoading(true);

            const token = $('input[name="__RequestVerificationToken"]').val();

            $.ajax({
                url: '/AdminContact/QuickReply',
                type: 'POST',
                headers: {
                    'RequestVerificationToken': token
                },
                data: {
                    id: contactId,
                    replyMessage: replyMessage
                },
                success: function (result) {
                    if (result.success) {
                        showNotification(result.message, 'success');
                        closeReplyModal();

                        // Update row UI
                        const row = $(`#contact-${contactId}`);
                        if (row.length) {
                            row.removeClass('unread');

                            const statusCell = row.find('.status-badge');
                            statusCell
                                .removeClass()
                                .addClass('status-badge status-responded')
                                .text('Responded');

                            // Remove buttons
                            row.find('.btn-respond').remove();
                            row.find('.btn-reply').remove();
                        }

                        loadStats(); // Refresh stats
                    } else {
                        showNotification(result.message, 'danger');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error sending reply:', error);
                    showNotification('Failed to send reply', 'danger');
                },
                complete: function () {
                    showLoading(false);
                }
            });
        }


    // Delete message
    async function deleteMessage(contactId) {
        if (!confirm('Are you sure you want to delete this message? This action cannot be undone.')) {
            return;
        }
        
        showLoading(true);
        
        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            const response = await fetch(`/AdminContact/Delete/${contactId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token || ''
                }
            });
            
            const result = await response.json();
            
            if (result.success) {
                // Remove row from table
                const row = document.getElementById(`contact-${contactId}`);
                if (row) {
                    row.style.opacity = '0.5';
                    row.style.transition = 'opacity 0.3s ease';
                    setTimeout(() => row.remove(), 300);
                }
                
                showNotification(result.message, 'warning');
                loadStats(); // Refresh stats
                updateSelection(); // Update bulk actions
            } else {
                showNotification(result.message, 'danger');
            }
        } catch (error) {
            console.error('Error deleting message:', error);
            showNotification('Failed to delete message', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Bulk selection
    function toggleSelectAll() {
        const selectAll = document.getElementById('selectAllCheckbox').checked;
        document.querySelectorAll('.message-select').forEach(checkbox => {
            checkbox.checked = selectAll;
        });
        updateSelection();
    }

    function selectAll() {
        document.getElementById('selectAllCheckbox').checked = true;
        toggleSelectAll();
    }

    function updateSelection() {
        const selected = document.querySelectorAll('.message-select:checked');
        const selectedCount = selected.length;
        const totalCount = document.querySelectorAll('.message-select').length;
        
        document.getElementById('selectedCount').textContent = `${selectedCount} messages selected`;
        document.getElementById('selectAllCheckbox').checked = selectedCount === totalCount;
        
        // Show/hide bulk actions
        const bulkActions = document.getElementById('bulkActions');
        if (selectedCount > 0) {
            bulkActions.classList.add('active');
        } else {
            bulkActions.classList.remove('active');
        }
    }

    function clearSelection() {
        document.querySelectorAll('.message-select').forEach(checkbox => {
            checkbox.checked = false;
        });
        document.getElementById('selectAllCheckbox').checked = false;
        updateSelection();
    }

    // Bulk action
    async function bulkAction(action) {
        const selected = document.querySelectorAll('.message-select:checked');
        if (selected.length === 0) {
            showNotification('Please select at least one message.', 'warning');
            return;
        }
        
        const confirmMessage = action === 'read' ? 'Mark selected messages as read?' :
                             action === 'responded' ? 'Mark selected messages as responded?' :
                             'Delete selected messages? This action cannot be undone.';
        
        if (!confirm(confirmMessage)) {
            return;
        }
        
        showLoading(true);
        
        const contactIds = Array.from(selected).map(checkbox => parseInt(checkbox.value));
        alert(contactIds)
        try {
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                $.ajax({
                    url: '/AdminContact/BulkAction',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: {
                        action: action,
                        contactIds: contactIds
                    },
                    success: function (result) {

                        if (result.success) {
                            showNotification(result.message, 'success');

                            // Refresh page after bulk delete
                            if (action === 'delete') {
                                setTimeout(function () {
                                    location.reload();
                                }, 1500);
                            } else {

                                // Update UI for other actions
                                contactIds.forEach(function (id) {
                                    const row = document.getElementById(`contact-${id}`);
                                    if (!row) return;

                                    const statusCell = row.querySelector('.status-badge');

                                    if (action === 'read') {
                                        row.classList.remove('unread');
                                        if (statusCell) {
                                            statusCell.className = 'status-badge status-read';
                                            statusCell.textContent = 'Read';
                                        }
                                    }

                                    else if (action === 'responded') {
                                        row.classList.remove('unread');
                                        if (statusCell) {
                                            statusCell.className = 'status-badge status-responded';
                                            statusCell.textContent = 'Responded';
                                        }

                                        // Remove respond buttons
                                        const actionButtons = row.querySelector('.action-buttons');
                                        if (actionButtons) {
                                            actionButtons.querySelector('.btn-respond')?.remove();
                                            actionButtons.querySelector('.btn-reply')?.remove();
                                        }
                                    }
                                });

                                clearSelection();
                                loadStats(); // Refresh stats
                            }

                        } else {
                            showNotification(result.message, 'danger');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error performing bulk action:', error);
                        showNotification('Failed to perform bulk action', 'danger');
                    },
                    complete: function () {
                        showLoading(false);
                    }
                });
        } catch (error) {
            console.error('Error performing bulk action:', error);
            showNotification('Failed to perform bulk action', 'danger');
        } finally {
            showLoading(false);
        }
    }

    // Close modals
    function closeModal() {
        document.getElementById('messageModal').style.display = 'none';
    }

    function closeReplyModal() {
        document.getElementById('replyModal').style.display = 'none';
        document.getElementById('replyForm').reset();
    }

