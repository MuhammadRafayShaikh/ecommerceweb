@{
    ViewData["Title"] = "Shipping Policy - Elegant Stitch";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/user/shipping/shipping-policy.css" />

<!-- Shipping Policy Hero -->
<section class="shipping-hero">
    <div class="shipping-hero-content">
        <div class="hero-icon">
            <i class="fas fa-shipping-fast"></i>
        </div>
        <h1>Shipping Policy</h1>
        <div class="hero-divider"></div>
        <p>Comprehensive information about our shipping methods, delivery timelines, and policies to ensure a seamless shopping experience.</p>
        <div class="last-updated">
            <i class="fas fa-history"></i> Last Updated: Januray 28, 2026
        </div>
    </div>
</section>

<!-- Quick Summary -->
<section class="summary-section">
    <div class="summary-container">
        <h2>Shipping At a Glance</h2>
        <div class="summary-cards">
            <div class="summary-card">
                <div class="summary-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <div class="summary-content">
                    <h3>Standard Delivery</h3>
                    <p class="duration">5-7 Business Days</p>
                    <p class="cost">₹99 (Free above ₹3000)</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="summary-icon">
                    <i class="fas fa-rocket"></i>
                </div>
                <div class="summary-content">
                    <h3>Express Delivery</h3>
                    <p class="duration">2-3 Business Days</p>
                    <p class="cost">₹299 (All Orders)</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="summary-icon">
                    <i class="fas fa-globe-asia"></i>
                </div>
                <div class="summary-content">
                    <h3>International</h3>
                    <p class="duration">7-15 Business Days</p>
                    <p class="cost">Starting at $19.99</p>
                </div>
            </div>

            <div class="summary-card">
                <div class="summary-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="summary-content">
                    <h3>Processing Time</h3>
                    <p class="duration">1-2 Business Days</p>
                    <p class="cost">(For Ready Stock)</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Policy Content -->
<main class="policy-main">
    

    <!-- Order Processing -->
    <section id="processing" class="policy-section">
        <div class="section-header">
            <div class="section-number">1</div>
            <div>
                <h2>Order Processing & Timeline</h2>
                <p>How we process and prepare your orders for shipping</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="timeline-visual">
                <div class="timeline-step">
                    <div class="step-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="step-content">
                        <h4>Order Confirmation</h4>
                        <p>Immediately after payment, you'll receive an order confirmation email with your order details.</p>
                    </div>
                </div>

                <div class="timeline-step">
                    <div class="step-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="step-content">
                        <h4>Processing</h4>
                        <p>Our team prepares your order, which typically takes <strong>1-2 business days</strong> for ready stock items.</p>
                    </div>
                </div>

                <div class="timeline-step">
                    <div class="step-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <div class="step-content">
                        <h4>Dispatching</h4>
                        <p>Your order is packed with care and handed over to our shipping partner.</p>
                    </div>
                </div>

                <div class="timeline-step">
                    <div class="step-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="step-content">
                        <h4>Delivery</h4>
                        <p>Your order arrives at your doorstep as per the selected shipping method.</p>
                    </div>
                </div>
            </div>

            <div class="note-box">
                <div class="note-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="note-content">
                    <h4>Processing Time Note</h4>
                    <p><strong>Business Days:</strong> Monday to Saturday (excluding public holidays). Orders placed after 2 PM IST will be processed the next business day. During festive seasons (Diwali, Eid, Wedding season), processing may take an additional 1-2 days.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Domestic Shipping -->
    <section id="domestic" class="policy-section">
        <div class="section-header">
            <div class="section-number">2</div>
            <div>
                <h2>Domestic Shipping Within India</h2>
                <p>Shipping options and timelines for orders within India</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="shipping-methods">
                <div class="method-card">
                    <div class="method-header">
                        <div class="method-icon">
                            <i class="fas fa-truck"></i>
                        </div>
                        <h3>Standard Shipping</h3>
                        <span class="method-tag">Most Popular</span>
                    </div>
                    <div class="method-details">
                        <div class="detail-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <span class="detail-label">Delivery Time</span>
                                <span class="detail-value">5-7 Business Days</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-rupee-sign"></i>
                            <div>
                                <span class="detail-label">Shipping Cost</span>
                                <span class="detail-value">₹99 (Free above ₹3000)</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <span class="detail-label">Coverage</span>
                                <span class="detail-value">All Pincodes in India</span>
                            </div>
                        </div>
                    </div>
                    <div class="method-features">
                        <h4>Features:</h4>
                        <ul>
                            <li>Doorstep delivery</li>
                            <li>Cash on delivery available</li>
                            <li>Tracking available</li>
                            <li>3 delivery attempts</li>
                        </ul>
                    </div>
                </div>

                <div class="method-card premium">
                    <div class="method-header">
                        <div class="method-icon">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <h3>Express Shipping</h3>
                        <span class="method-tag">Fastest</span>
                    </div>
                    <div class="method-details">
                        <div class="detail-item">
                            <i class="fas fa-clock"></i>
                            <div>
                                <span class="detail-label">Delivery Time</span>
                                <span class="detail-value">2-3 Business Days</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-rupee-sign"></i>
                            <div>
                                <span class="detail-label">Shipping Cost</span>
                                <span class="detail-value">₹299 (All Orders)</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-map-marker-alt"></i>
                            <div>
                                <span class="detail-label">Coverage</span>
                                <span class="detail-value">Major Cities Only</span>
                            </div>
                        </div>
                    </div>
                    <div class="method-features">
                        <h4>Features:</h4>
                        <ul>
                            <li>Priority processing</li>
                            <li>Guanteed 3-day delivery</li>
                            <li>Real-time tracking</li>
                            <li>Weekend deliveries available</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="info-box">
                <h3><i class="fas fa-info-circle"></i> Important Information</h3>
                <div class="info-grid">
                    <div class="info-item">
                        <i class="fas fa-calendar"></i>
                        <p><strong>Delivery Attempts:</strong> We make 3 delivery attempts. If unsuccessful, the package returns to our warehouse.</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-id-card"></i>
                        <p><strong>ID Proof:</strong> For high-value orders (₹10,000+), ID proof may be required at delivery.</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-gift"></i>
                        <p><strong>Gift Orders:</strong> No price tags or invoices included in the package for gift orders.</p>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-mountain"></i>
                        <p><strong>Remote Areas:</strong> Some remote locations may take 2-3 extra days for delivery.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- International Shipping -->
    <section id="international" class="policy-section">
        <div class="section-header">
            <div class="section-number">3</div>
            <div>
                <h2>International Shipping</h2>
                <p>Shipping to countries outside India</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="international-intro">
                <p>We ship to over 50 countries worldwide. Please note that international shipping involves additional considerations.</p>
            </div>

            <div class="shipping-table-container">
                <h3><i class="fas fa-plane"></i> International Shipping Timelines & Costs</h3>
                <div class="shipping-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Region</th>
                                <th>Countries</th>
                                <th>Standard (7-15 days)</th>
                                <th>Express (5-7 days)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>North America</td>
                                <td>USA, Canada</td>
                                <td>$24.99</td>
                                <td>$39.99</td>
                            </tr>
                            <tr>
                                <td>Europe</td>
                                <td>UK, Germany, France</td>
                                <td>$22.99</td>
                                <td>$37.99</td>
                            </tr>
                            <tr>
                                <td>Middle East</td>
                                <td>UAE, Saudi Arabia, Qatar</td>
                                <td>$19.99</td>
                                <td>$34.99</td>
                            </tr>
                            <tr>
                                <td>Asia Pacific</td>
                                <td>Australia, Singapore, Malaysia</td>
                                <td>$21.99</td>
                                <td>$36.99</td>
                            </tr>
                            <tr>
                                <td>Other Regions</td>
                                <td>Rest of the World</td>
                                <td>$29.99</td>
                                <td>$44.99</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="warning-box">
                <div class="warning-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="warning-content">
                    <h4>Important: Customs & Duties</h4>
                    <p>International customers are responsible for all customs duties, taxes, and import fees levied by their country. These charges are not included in our shipping costs and must be paid upon delivery. We recommend checking your country's import regulations before ordering.</p>
                    <ul>
                        <li>All international shipments include commercial invoice</li>
                        <li>Duties vary by country and order value</li>
                        <li>We cannot predict exact duty amounts</li>
                        <li>Refused shipments due to customs are non-refundable</li>
                    </ul>
                </div>
            </div>

            <div class="country-list">
                <h4><i class="fas fa-globe"></i> Countries We Ship To:</h4>
                <div class="countries-grid">
                    <span>United States</span>
                    <span>Canada</span>
                    <span>United Kingdom</span>
                    <span>Australia</span>
                    <span>Germany</span>
                    <span>France</span>
                    <span>UAE</span>
                    <span>Saudi Arabia</span>
                    <span>Singapore</span>
                    <span>Malaysia</span>
                    <span>Japan</span>
                    <span>South Korea</span>
                    <span>New Zealand</span>
                    <span>Netherlands</span>
                    <span>Italy</span>
                    <span>Spain</span>
                    <span>+35 more countries</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Delivery Process -->
    <section id="delivery" class="policy-section">
        <div class="section-header">
            <div class="section-number">4</div>
            <div>
                <h2>Delivery Process & Procedures</h2>
                <p>What happens after your order is shipped</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="process-steps">
                <div class="process-step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h4>Shipping Notification</h4>
                        <p>You'll receive an email and SMS with tracking details once your order is dispatched.</p>
                    </div>
                </div>

                <div class="process-step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h4>In Transit</h4>
                        <p>Your package moves through our logistics network with regular tracking updates.</p>
                    </div>
                </div>

                <div class="process-step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h4>Out for Delivery</h4>
                        <p>Local delivery partner picks up your package for final delivery to your address.</p>
                    </div>
                </div>

                <div class="process-step">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <h4>Delivery Attempt</h4>
                        <p>Delivery executive attempts delivery at your provided address during business hours.</p>
                    </div>
                </div>

                <div class="process-step">
                    <div class="step-number">5</div>
                    <div class="step-content">
                        <h4>Successful Delivery</h4>
                        <p>You receive the package and sign/acknowledge delivery. You'll get a delivery confirmation.</p>
                    </div>
                </div>
            </div>

            <div class="delivery-instructions">
                <h3><i class="fas fa-clipboard-list"></i> Delivery Instructions</h3>
                <div class="instructions-grid">
                    <div class="instruction">
                        <i class="fas fa-user-check"></i>
                        <div>
                            <h4>Recipient Requirements</h4>
                            <p>The recipient must be present at the delivery address with valid ID proof for verification.</p>
                        </div>
                    </div>
                    <div class="instruction">
                        <i class="fas fa-box-open"></i>
                        <div>
                            <h4>Package Inspection</h4>
                            <p>We recommend inspecting the package for damage before accepting delivery.</p>
                        </div>
                    </div>
                    <div class="instruction">
                        <i class="fas fa-undo"></i>
                        <div>
                            <h4>Failed Delivery</h4>
                            <p>If you miss delivery, you'll get a notification to reschedule or pick up from the nearest center.</p>
                        </div>
                    </div>
                    <div class="instruction">
                        <i class="fas fa-phone"></i>
                        <div>
                            <h4>Contact Information</h4>
                            <p>Ensure your phone number is correct for delivery coordination.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Shipping Costs -->
    <section id="costs" class="policy-section">
        <div class="section-header">
            <div class="section-number">5</div>
            <div>
                <h2>Shipping Costs & Charges</h2>
                <p>Detailed breakdown of all shipping-related charges</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="costs-overview">
                <div class="cost-card">
                    <h3><i class="fas fa-rupee-sign"></i> Domestic Shipping Costs</h3>
                    <div class="cost-details">
                        <div class="cost-item">
                            <span class="cost-label">Standard Shipping</span>
                            <span class="cost-value">₹99</span>
                        </div>
                        <div class="cost-note">Free on orders above ₹3000</div>

                        <div class="cost-item">
                            <span class="cost-label">Express Shipping</span>
                            <span class="cost-value">₹299</span>
                        </div>
                        <div class="cost-note">Flat rate for all domestic orders</div>

                        <div class="cost-item">
                            <span class="cost-label">Cash on Delivery</span>
                            <span class="cost-value">₹99 extra</span>
                        </div>
                        <div class="cost-note">Additional COD charges apply</div>
                    </div>
                </div>

                <div class="cost-card">
                    <h3><i class="fas fa-dollar-sign"></i> International Shipping Costs</h3>
                    <div class="cost-details">
                        <div class="cost-item">
                            <span class="cost-label">Standard (7-15 days)</span>
                            <span class="cost-value">Starting at $19.99</span>
                        </div>
                        <div class="cost-note">Varies by country and weight</div>

                        <div class="cost-item">
                            <span class="cost-label">Express (5-7 days)</span>
                            <span class="cost-value">Starting at $34.99</span>
                        </div>
                        <div class="cost-note">Priority international shipping</div>

                        <div class="cost-item">
                            <span class="cost-label">Additional Surcharges</span>
                            <span class="cost-value">May apply</span>
                        </div>
                        <div class="cost-note">For remote areas or special handling</div>
                    </div>
                </div>
            </div>

            <div class="additional-charges">
                <h3><i class="fas fa-receipt"></i> Additional Charges That May Apply</h3>
                <div class="charges-grid">
                    <div class="charge-item">
                        <div class="charge-icon">
                            <i class="fas fa-mountain"></i>
                        </div>
                        <div class="charge-content">
                            <h4>Remote Area Surcharge</h4>
                            <p>Additional ₹150-300 for delivery to remote locations with limited accessibility.</p>
                        </div>
                    </div>

                    <div class="charge-item">
                        <div class="charge-icon">
                            <i class="fas fa-redo"></i>
                        </div>
                        <div class="charge-content">
                            <h4>Re-delivery Charges</h4>
                            <p>₹99 for re-attempted deliveries after 3 failed attempts.</p>
                        </div>
                    </div>

                    <div class="charge-item">
                        <div class="charge-icon">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <div class="charge-content">
                            <h4>Oversized Items</h4>
                            <p>Additional charges for bulky items or multiple-piece orders.</p>
                        </div>
                    </div>

                    <div class="charge-item">
                        <div class="charge-icon">
                            <i class="fas fa-gift"></i>
                        </div>
                        <div class="charge-content">
                            <h4>Gift Packaging</h4>
                            <p>₹199 for premium gift wrapping and packaging service.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tax-info">
                <div class="tax-icon">
                    <i class="fas fa-percentage"></i>
                </div>
                <div class="tax-content">
                    <h4>Taxes on Shipping</h4>
                    <p>All shipping charges are subject to 18% GST for domestic orders. International shipping costs are exclusive of any taxes or duties imposed by the destination country.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Order Tracking -->
    <section id="tracking" class="policy-section">
        <div class="section-header">
            <div class="section-number">6</div>
            <div>
                <h2>Order Tracking</h2>
                <p>How to track your order and understand tracking status</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="tracking-methods">
                <div class="method">
                    <div class="method-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h4>Email Tracking</h4>
                    <p>You'll receive an email with tracking link once your order is shipped.</p>
                </div>

                <div class="method">
                    <div class="method-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h4>SMS Updates</h4>
                    <p>Regular SMS updates at key stages of your delivery.</p>
                </div>

                <div class="method">
                    <div class="method-icon">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <h4>Account Dashboard</h4>
                    <p>Track your order from 'My Orders' section in your account.</p>
                </div>

                <div class="method">
                    <div class="method-icon">
                        <i class="fas fa-qrcode"></i>
                    </div>
                    <h4>Track Order Page</h4>
                    <p>Use the tracking number on our website's track order page.</p>
                </div>
            </div>

            <div class="tracking-status-guide">
                <h3><i class="fas fa-map-signs"></i> Understanding Tracking Status</h3>
                <div class="status-grid">
                    <div class="status-item">
                        <div class="status-indicator pending"></div>
                        <div class="status-content">
                            <h4>Order Confirmed</h4>
                            <p>Your order has been received and confirmed.</p>
                        </div>
                    </div>

                    <div class="status-item">
                        <div class="status-indicator processing"></div>
                        <div class="status-content">
                            <h4>Processing</h4>
                            <p>Your order is being prepared for shipment.</p>
                        </div>
                    </div>

                    <div class="status-item">
                        <div class="status-indicator shipped"></div>
                        <div class="status-content">
                            <h4>Shipped</h4>
                            <p>Your order has left our warehouse.</p>
                        </div>
                    </div>

                    <div class="status-item">
                        <div class="status-indicator transit"></div>
                        <div class="status-content">
                            <h4>In Transit</h4>
                            <p>Your order is on its way to you.</p>
                        </div>
                    </div>

                    <div class="status-item">
                        <div class="status-indicator out-for-delivery"></div>
                        <div class="status-content">
                            <h4>Out for Delivery</h4>
                            <p>Your order is with the local delivery agent.</p>
                        </div>
                    </div>

                    <div class="status-item">
                        <div class="status-indicator delivered"></div>
                        <div class="status-content">
                            <h4>Delivered</h4>
                            <p>Your order has been successfully delivered.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Custom Orders -->
    <section id="custom" class="policy-section">
        <div class="section-header">
            <div class="section-number">7</div>
            <div>
                <h2>Custom & Made-to-Order Suits</h2>
                <p>Special shipping considerations for customized products</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="custom-order-info">
                <div class="custom-timeline">
                    <h3><i class="fas fa-calendar-alt"></i> Custom Order Timeline</h3>
                    <div class="timeline-visual">
                        <div class="timeline-phase">
                            <div class="phase-number">1</div>
                            <div class="phase-content">
                                <h4>Design Consultation</h4>
                                <p class="phase-duration">1-2 days</p>
                                <p class="phase-desc">Discuss design, fabrics, and measurements</p>
                            </div>
                        </div>

                        <div class="timeline-phase">
                            <div class="phase-number">2</div>
                            <div class="phase-content">
                                <h4>Production</h4>
                                <p class="phase-duration">6-10 days</p>
                                <p class="phase-desc">Handcrafting your suit with care</p>
                            </div>
                        </div>

                        <div class="timeline-phase">
                            <div class="phase-number">3</div>
                            <div class="phase-content">
                                <h4>Quality Check</h4>
                                <p class="phase-duration">1 day</p>
                                <p class="phase-desc">Final inspection and packaging</p>
                            </div>
                        </div>

                        <div class="timeline-phase">
                            <div class="phase-number">4</div>
                            <div class="phase-content">
                                <h4>Shipping</h4>
                                <p class="phase-duration">2-7 days</p>
                                <p class="phase-desc">Delivery based on your location</p>
                            </div>
                        </div>
                    </div>
                    <p class="timeline-total"><strong>Total Time:</strong> 10-20 business days from order confirmation</p>
                </div>

                <div class="custom-notes">
                    <div class="note important">
                        <div class="note-icon">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                        <div class="note-content">
                            <h4>Important Notes for Custom Orders</h4>
                            <ul>
                                <li>Custom orders cannot be cancelled after 24 hours</li>
                                <li>Made-to-measure suits are non-returnable (except for defects)</li>
                                <li>Shipping costs for custom orders are non-refundable</li>
