@{
    ViewData["Title"] = "Return & Exchange Policy - Elegant Stitch";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/user/return-exchange/return-exchange.css" />

<!-- Hero Section -->
<section class="return-hero">
    <div class="return-hero-content">
        <div class="hero-icon">
            <i class="fas fa-exchange-alt"></i>
        </div>
        <h1>Return & Exchange Policy</h1>
        <div class="hero-divider"></div>
        <p>Our hassle-free return and exchange process ensures you shop with confidence and peace of mind.</p>
        <div class="policy-highlights">
            <span class="highlight"><i class="fas fa-calendar-check"></i> 15-Day Return Window</span>
            <span class="highlight"><i class="fas fa-truck"></i> Free Returns in India</span>
            <span class="highlight"><i class="fas fa-sync-alt"></i> Easy Exchange Process</span>
        </div>
    </div>
</section>

<!-- Quick Policy Summary -->
<section class="policy-summary">
    <div class="summary-container">
        <h2>Policy at a Glance</h2>
        <div class="summary-grid">
            <div class="summary-card">
                <div class="summary-icon return">
                    <i class="fas fa-undo"></i>
                </div>
                <h3>Returns</h3>
                <ul>
                    <li><i class="fas fa-check-circle"></i> 15 days from delivery</li>
                    <li><i class="fas fa-check-circle"></i> Unworn, unwashed condition</li>
                    <li><i class="fas fa-check-circle"></i> Original tags attached</li>
                    <li><i class="fas fa-check-circle"></i> Free return shipping (India)</li>
                </ul>
            </div>

            <div class="summary-card">
                <div class="summary-icon exchange">
                    <i class="fas fa-sync-alt"></i>
                </div>
                <h3>Exchanges</h3>
                <ul>
                    <li><i class="fas fa-check-circle"></i> Size exchanges within 15 days</li>
                    <li><i class="fas fa-check-circle"></i> Color/style if available</li>
                    <li><i class="fas fa-check-circle"></i> No extra shipping charges</li>
                    <li><i class="fas fa-check-circle"></i> Priority processing</li>
                </ul>
            </div>

            <div class="summary-card">
                <div class="summary-icon refund">
                    <i class="fas fa-rupee-sign"></i>
                </div>
                <h3>Refunds</h3>
                <ul>
                    <li><i class="fas fa-check-circle"></i> Processed in 7-10 days</li>
                    <li><i class="fas fa-check-circle"></i> Original payment method</li>
                    <li><i class="fas fa-check-circle"></i> Full refund for returns</li>
                    <li><i class="fas fa-check-circle"></i> Store credit option available</li>
                </ul>
            </div>

            <div class="summary-card">
                <div class="summary-icon non-returnable">
                    <i class="fas fa-times-circle"></i>
                </div>
                <h3>Non-Returnable</h3>
                <ul>
                    <li><i class="fas fa-times-circle"></i> Customized suits</li>
                    <li><i class="fas fa-times-circle"></i> Innerwear</li>
                    <li><i class="fas fa-times-circle"></i> Sale/clearance items</li>
                    <li><i class="fas fa-times-circle"></i> Damaged by customer</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<main class="policy-main">
    <!-- Table of Contents -->

    <!-- Return Policy -->
    <section id="return-policy" class="policy-section">
        <div class="section-header">
            <div class="section-number">1</div>
            <div>
                <h2>Return Policy</h2>
                <p>Our comprehensive return guidelines for all purchases</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="return-conditions">
                <h3><i class="fas fa-clipboard-check"></i> Return Conditions</h3>
                <div class="conditions-grid">
                    <div class="condition-card">
                        <div class="condition-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h4>Time Frame</h4>
                        <p>Returns accepted within <strong>15 days</strong> from the delivery date.</p>
                    </div>

                    <div class="condition-card">
                        <div class="condition-icon">
                            <i class="fas fa-tshirt"></i>
                        </div>
                        <h4>Item Condition</h4>
                        <p>Must be <strong>unworn, unwashed, and undamaged</strong> with original tags attached.</p>
                    </div>

                    <div class="condition-card">
                        <div class="condition-icon">
                            <i class="fas fa-tags"></i>
                        </div>
                        <h4>Original Packaging</h4>
                        <p>All original packaging, labels, and accessories must be included.</p>
                    </div>

                    <div class="condition-card">
                        <div class="condition-icon">
                            <i class="fas fa-box"></i>
                        </div>
                        <h4>Packaging</h4>
                        <p>Return in original packaging or secure packaging to prevent damage.</p>
                    </div>
                </div>
            </div>

            <div class="return-process-timeline">
                <h3><i class="fas fa-history"></i> Return Process Timeline</h3>
                <div class="timeline">
                    <div class="timeline-step">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Initiate Return</h4>
                            <p>Request return within 15 days of delivery via your account or contact us.</p>
                            <span class="step-duration">Day 1</span>
                        </div>
                    </div>

                    <div class="timeline-step">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Return Pickup</h4>
                            <p>Schedule free pickup (India) or drop off at nearest center.</p>
                            <span class="step-duration">Day 1-2</span>
                        </div>
                    </div>

                    <div class="timeline-step">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Quality Check</h4>
                            <p>Our team inspects the returned item for compliance with policy.</p>
                            <span class="step-duration">Day 3-5</span>
                        </div>
                    </div>

                    <div class="timeline-step">
                        <div class="step-number">4</div>
                        <div class="step-content">
                            <h4>Refund Processing</h4>
                            <p>Refund initiated once quality check is passed successfully.</p>
                            <span class="step-duration">Day 6-8</span>
                        </div>
                    </div>

                    <div class="timeline-step">
                        <div class="step-number">5</div>
                        <div class="step-content">
                            <h4>Refund Received</h4>
                            <p>Amount credited to your original payment method.</p>
                            <span class="step-duration">Day 7-10</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="shipping-info">
                <div class="info-card free-return">
                    <div class="info-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <div class="info-content">
                        <h4>Free Return Shipping (India)</h4>
                        <p>We provide free return shipping for all domestic orders. You'll receive a prepaid return label via email. For international returns, shipping costs are borne by the customer.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Exchange Policy -->
    <section id="exchange-policy" class="policy-section">
        <div class="section-header">
            <div class="section-number">2</div>
            <div>
                <h2>Exchange Policy</h2>
                <p>Easy exchanges for size, color, or style changes</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="exchange-options">
                <h3><i class="fas fa-exchange-alt"></i> What Can Be Exchanged?</h3>
                <div class="options-grid">
                    <div class="option-card">
                        <div class="option-icon">
                            <i class="fas fa-ruler"></i>
                        </div>
                        <h4>Size Exchange</h4>
                        <p>Exchange for a different size within 15 days of delivery.</p>
                        <div class="option-note">
                            <i class="fas fa-info-circle"></i> Subject to size availability
                        </div>
                    </div>

                    <div class="option-card">
                        <div class="option-icon">
                            <i class="fas fa-palette"></i>
                        </div>
                        <h4>Color Exchange</h4>
                        <p>Exchange for a different color if available in stock.</p>
                        <div class="option-note">
                            <i class="fas fa-info-circle"></i> Color swatches available on request
                        </div>
                    </div>

                    <div class="option-card">
                        <div class="option-icon">
                            <i class="fas fa-vest"></i>
                        </div>
                        <h4>Style Exchange</h4>
                        <p>Exchange for a different style of equal or greater value.</p>
                        <div class="option-note">
                            <i class="fas fa-info-circle"></i> Price difference applicable
                        </div>
                    </div>
                </div>
            </div>

            <div class="exchange-process">
                <h3><i class="fas fa-list-ol"></i> Exchange Process</h3>
                <div class="process-steps">
                    <div class="process-step">
                        <div class="step-icon">
                            <i class="fas fa-laptop"></i>
                        </div>
                        <div class="step-content">
                            <h4>Request Exchange</h4>
                            <p>Login to your account, go to 'My Orders' and select 'Exchange'.</p>
                        </div>
                    </div>

                    <div class="process-step">
                        <div class="step-icon">
                            <i class="fas fa-box"></i>
                        </div>
                        <div class="step-content">
                            <h4>Return Original Item</h4>
                            <p>Return the original item as per return policy guidelines.</p>
                        </div>
                    </div>

                    <div class="process-step">
                        <div class="step-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="step-content">
                            <h4>Quality Check</h4>
                            <p>We inspect the returned item before processing exchange.</p>
                        </div>
                    </div>

                    <div class="process-step">
                        <div class="step-icon">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="step-content">
                            <h4>New Item Shipped</h4>
                            <p>Once approved, we ship the exchanged item immediately.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="exchange-notes">
                <div class="note-card">
                    <div class="note-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="note-content">
                        <h4>Exchange Timeline</h4>
                        <p>Exchanges typically take <strong>7-12 business days</strong> from initiating the request to receiving the new item. This includes return transit, quality check, and shipping of the new item.</p>
                    </div>
                </div>

                <div class="note-card">
                    <div class="note-icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <div class="note-content">
                        <h4>Price Differences</h4>
                        <p>If the exchanged item costs more, you'll pay the difference. If it costs less, we'll refund the difference to your original payment method. No exchange charges for domestic exchanges.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Refund Policy -->
    <section id="refund-policy" class="policy-section">
        <div class="section-header">
            <div class="section-number">3</div>
            <div>
                <h2>Refund Policy</h2>
                <p>Transparent refund process and timelines</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="refund-methods">
                <h3><i class="fas fa-credit-card"></i> Refund Methods</h3>
                <div class="methods-grid">
                    <div class="method-card">
                        <div class="method-icon">
                            <i class="fab fa-cc-visa"></i>
                        </div>
                        <h4>Credit/Debit Cards</h4>
                        <p>Refunded to original card within 7-10 business days.</p>
                        <div class="method-note">Bank processing time may vary</div>
                    </div>

                    <div class="method-card">
                        <div class="method-icon">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <h4>Net Banking</h4>
                        <p>Refunded to original bank account within 5-7 business days.</p>
                        <div class="method-note">NEFT/IMPS transfer</div>
                    </div>

                    <div class="method-card">
                        <div class="method-icon">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <h4>UPI/Wallets</h4>
                        <p>Refunded to original UPI ID or wallet within 24-48 hours.</p>
                        <div class="method-note">Fastest refund method</div>
                    </div>

                    <div class="method-card">
                        <div class="method-icon">
                            <i class="fas fa-gift"></i>
                        </div>
                        <h4>Store Credit</h4>
                        <p>Instant store credit for future purchases with 1-year validity.</p>
                        <div class="method-note">+10% bonus on store credit</div>
                    </div>
                </div>
            </div>

            <div class="refund-timeline">
                <h3><i class="fas fa-calendar-alt"></i> Refund Timeline</h3>
                <div class="timeline-visual">
                    <div class="timeline-phase">
                        <div class="phase-marker"></div>
                        <div class="phase-content">
                            <h4>Return Received</h4>
                            <p>Once we receive your return at our warehouse</p>
                            <span class="phase-time">Day 0</span>
                        </div>
                    </div>

                    <div class="timeline-phase">
                        <div class="phase-marker"></div>
                        <div class="phase-content">
                            <h4>Quality Check</h4>
                            <p>Inspection of returned item for policy compliance</p>
                            <span class="phase-time">1-2 days</span>
                        </div>
                    </div>

                    <div class="timeline-phase">
                        <div class="phase-marker"></div>
                        <div class="phase-content">
                            <h4>Refund Initiated</h4>
                            <p>Refund processed from our end to payment gateway</p>
                            <span class="phase-time">Day 3</span>
                        </div>
                    </div>

                    <div class="timeline-phase">
                        <div class="phase-marker"></div>
                        <div class="phase-content">
                            <h4>Bank Processing</h4>
                            <p>Payment gateway processes refund to your bank</p>
                            <span class="phase-time">2-7 days</span>
                        </div>
                    </div>

                    <div class="timeline-phase">
                        <div class="phase-marker"></div>
                        <div class="phase-content">
                            <h4>Refund Received</h4>
                            <p>Amount reflects in your account statement</p>
                            <span class="phase-time">Day 7-10</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="refund-notes">
                <div class="note important">
                    <div class="note-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="note-content">
                        <h4>Important Refund Notes</h4>
                        <ul>
                            <li>Original shipping charges are non-refundable (except for defective items)</li>
                            <li>Cash on Delivery orders refunded via bank transfer only</li>
                            <li>International orders refunded in INR at current exchange rate</li>
                            <li>Bank charges for international refunds are borne by customer</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How to Return/Exchange -->
    <section id="how-to" class="policy-section">
        <div class="section-header">
            <div class="section-number">4</div>
            <div>
                <h2>How to Return or Exchange</h2>
                <p>Step-by-step guide for initiating returns and exchanges</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="how-to-steps">
                <div class="step-guide">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h4>Login to Your Account</h4>
                        <p>Go to www.elegantstitch.com and login to your account. Navigate to 'My Orders' section.</p>
                        <div class="step-image">
                            <div class="image-placeholder">
                                <i class="fas fa-user-circle"></i>
                                <span>Account Dashboard</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step-guide">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h4>Select Order</h4>
                        <p>Find the order containing the item you wish to return/exchange. Click on 'View Details'.</p>
                        <div class="step-image">
                            <div class="image-placeholder">
                                <i class="fas fa-shopping-bag"></i>
                                <span>Order Details</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step-guide">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h4>Choose Action</h4>
                        <p>Click 'Return Item' or 'Exchange Item'. Select reason and provide details if required.</p>
                        <div class="step-image">
                            <div class="image-placeholder">
                                <i class="fas fa-exchange-alt"></i>
                                <span>Return/Exchange Form</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step-guide">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <h4>Print Label & Package</h4>
                        <p>Print the prepaid return label. Package item securely with original tags and accessories.</p>
                        <div class="step-image">
                            <div class="image-placeholder">
                                <i class="fas fa-print"></i>
                                <span>Return Label</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="step-guide">
                    <div class="step-number">5</div>
                    <div class="step-content">
                        <h4>Ship or Schedule Pickup</h4>
                        <p>Drop off at nearest courier center or schedule free pickup (available in major cities).</p>
                        <div class="step-image">
                            <div class="image-placeholder">
                                <i class="fas fa-truck"></i>
                                <span>Pickup/Drop-off</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alternative-methods">
                <h3><i class="fas fa-mobile-alt"></i> Alternative Methods</h3>
                <div class="methods-list">
                    <div class="method">
                        <div class="method-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="method-content">
                            <h4>Email Request</h4>
                            <p>Send request to returns@elegantstitch.com with order number and details.</p>
                        </div>
                    </div>

                    <div class="method">
                        <div class="method-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="method-content">
                            <h4>Phone Support</h4>
                            <p>Call +91 22 1234 5678 and provide order details to our support team.</p>
                        </div>
                    </div>

                    <div class="method">
                        <div class="method-icon">
                            <i class="fas fa-comments"></i>
                        </div>
                        <div class="method-content">
                            <h4>Live Chat</h4>
                            <p>Use our website live chat for immediate assistance with returns.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="packaging-tips">
                <div class="tips-card">
                    <div class="tips-header">
                        <i class="fas fa-box-open"></i>
                        <h4>Packaging Tips</h4>
                    </div>
                    <div class="tips-content">
                        <ul>
                            <li>Use original packaging if available</li>
                            <li>Include all tags, labels, and accessories</li>
                            <li>Add extra padding for delicate items</li>
                            <li>Seal package securely with tape</li>
                            <li>Attach return label clearly on outside</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Exceptions -->
    <section id="exceptions" class="policy-section">
        <div class="section-header">
            <div class="section-number">5</div>
            <div>
                <h2>Exceptions & Special Cases</h2>
                <p>Items and situations not covered under standard return policy</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="exceptions-list">
                <h3><i class="fas fa-exclamation-circle"></i> Non-Returnable Items</h3>
                <div class="exception-items">
                    <div class="exception-item">
                        <div class="exception-icon">
                            <i class="fas fa-cut"></i>
                        </div>
                        <div class="exception-content">
                            <h4>Customized Suits</h4>
                            <p>Made-to-order, tailored, or customized suits are non-returnable unless there's a manufacturing defect.</p>
                        </div>
                    </div>

                    <div class="exception-item">
                        <div class="exception-icon">
                            <i class="fas fa-tshirt"></i>
                        </div>
                        <div class="exception-content">
                            <h4>Innerwear & Lingerie</h4>
                            <p>For hygiene reasons, innerwear, lingerie, and similar intimate apparel cannot be returned.</p>
                        </div>
                    </div>

                    <div class="exception-item">
                        <div class="exception-icon">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div class="exception-content">
                            <h4>Sale/Clearance Items</h4>
                            <p>Items purchased during sale, clearance, or special promotion events are final sale.</p>
                        </div>
                    </div>

                    <div class="exception-item">
                        <div class="exception-icon">
                            <i class="fas fa-gift"></i>
                        </div>
                        <div class="exception-content">
                            <h4>Gift Items</h4>
                            <p>Gift items can only be returned for store credit, not cash refund, unless defective.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="special-cases">
                <h3><i class="fas fa-star"></i> Special Cases</h3>
                <div class="cases-grid">
                    <div class="case-card">
                        <div class="case-header defective">
                            <i class="fas fa-times-circle"></i>
                            <h4>Defective/Damaged Items</h4>
                        </div>
                        <div class="case-content">
                            <p>If you receive a defective or damaged item, contact us within <strong>48 hours</strong> of delivery. We'll arrange free pickup and replacement at no extra cost.</p>
                            <div class="case-requirement">
                                <i class="fas fa-camera"></i> Photo evidence required
                            </div>
                        </div>
                    </div>

                    <div class="case-card">
                        <div class="case-header wrong-item">
                            <i class="fas fa-box"></i>
                            <h4>Wrong Item Received</h4>
                        </div>
                        <div class="case-content">
                            <p>If you receive an incorrect item, we'll arrange immediate pickup and ship the correct item with expedited shipping at our cost.</p>
                            <div class="case-requirement">
                                <i class="fas fa-clipboard-check"></i> Report within 24 hours
                            </div>
                        </div>
                    </div>

                    <div class="case-card">
                        <div class="case-header late-return">
                            <i class="fas fa-clock"></i>
                            <h4>Late Returns</h4>
                        </div>
                        <div class="case-content">
                            <p>Returns after 15 days but within 30 days may be accepted for store credit only, subject to management approval and 20% restocking fee.</p>
                            <div class="case-requirement">
                                <i class="fas fa-envelope"></i> Email approval required
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="return-rejection">
                <div class="rejection-card">
                    <div class="rejection-icon">
                        <i class="fas fa-ban"></i>
                    </div>
                    <div class="rejection-content">
                        <h4>Return Rejection Reasons</h4>
                        <p>Returns may be rejected if: item shows signs of wear/wash, missing tags/accessories, damaged due to customer mishandling, or returned after policy period. In such cases, item will be shipped back to you at your cost.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ -->
    <section id="faq" class="policy-section">
        <div class="section-header">
            <div class="section-number">6</div>
            <div>
                <h2>Frequently Asked Questions</h2>
                <p>Quick answers to common return and exchange questions</p>
            </div>
        </div>

        <div class="policy-content">
            <div class="faq-accordion">
                <div class="faq-item">
                    <div class="faq-question">
                        <h4>Can I return a suit if I've worn it once?</h4>
                        <i class="fas fa-chevron-down"></i>
                    </div>
