@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model List<E_Commerce.Models.Category>
<style>
    .btn-success {
        background: #28a745;
        color: #fff;
    }

    .btn-danger {
        background: #dc3545;
        color: #fff;
    }

    .btn-view-products {
        background: linear-gradient(45deg, #9c27b0, #7b1fa2);
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 14px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-view-products:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(156, 39, 176, 0.3);
            background: linear-gradient(45deg, #7b1fa2, #9c27b0);
        }

    /* Modal Styles */
    .products-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        animation: fadeIn 0.3s ease;
    }

    .modal-content {
        position: relative;
        background: white;
        width: 90%;
        max-width: 1000px;
        max-height: 80vh;
        margin: 10vh auto;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        animation: slideUp 0.4s ease;
    }

    .modal-header {
        background: linear-gradient(90deg, var(--primary), var(--primary-dark));
        color: white;
        padding: 20px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .modal-header h3 {
            font-size: 22px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }

    .modal-close {
        background: none;
        border: none;
        color: white;
        font-size: 24px;
        cursor: pointer;
        padding: 5px;
        transition: transform 0.3s ease;
    }

        .modal-close:hover {
            transform: rotate(90deg);
        }

    .modal-body {
        padding: 30px;
        overflow-y: auto;
        max-height: 60vh;
    }

    /* Products List Styles */
    .products-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .product-card {
        background: #fff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 1px solid #eee;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(156, 39, 176, 0.2);
        }

    .product-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    .product-name {
        font-size: 18px;
        font-weight: 600;
        color: var(--dark);
        margin-bottom: 5px;
    }

    .product-sku {
        color: #666;
        font-size: 14px;
        background: #f5f5f5;
        padding: 4px 8px;
        border-radius: 4px;
        display: inline-block;
    }

    .product-price {
        font-size: 20px;
        font-weight: 700;
        color: var(--primary);
    }

    .product-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin: 15px 0;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

        .detail-item i {
            color: var(--primary);
            width: 20px;
        }

    .product-colors {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin: 15px 0;
    }

    .color-chip {
        display: flex;
        align-items: center;
        gap: 5px;
        background: #f9f0fa;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 13px;
    }

    .color-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
    }

    .product-images {
        display: flex;
        gap: 10px;
        overflow-x: auto;
        padding: 10px 0;
    }

    .product-image {
        width: 80px;
        height: 80px;
        border-radius: 10px;
        object-fit: cover;
        border: 2px solid #eee;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.1);
        }

    .product-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .btn-view-detail {
        background: var(--info);
        color: white;
        border: none;
        padding: 8px 20px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-view-detail:hover {
            background: #0d8bf2;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(33, 150, 243, 0.3);
        }

    .product-status {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
    }

    .status-active {
        background: rgba(76, 175, 80, 0.1);
        color: var(--success);
    }

    .status-inactive {
        background: rgba(158, 158, 158, 0.1);
        color: #757575;
    }

    .empty-products {
        text-align: center;
        padding: 40px 20px;
        color: #777;
    }

        .empty-products i {
            font-size: 50px;
            color: #ddd;
            margin-bottom: 15px;
        }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Scrollbar Styling */
    .modal-body::-webkit-scrollbar {
        width: 6px;
    }

    .modal-body::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .modal-body::-webkit-scrollbar-thumb {
        background: var(--primary-light);
        border-radius: 10px;
    }

        .modal-body::-webkit-scrollbar-thumb:hover {
            background: var(--primary);
        }
</style>

<div class="main-content" id="mainContent">
    @await Html.PartialAsync("_AdminCategoryHeader")

    <div class="page-container" id="viewCategoriesPage">
        <div class="categories-table-container">
            <div class="table-header">
                <h2><i class="fas fa-list"></i> All Categories</h2>
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" id="categorySearch" placeholder="Search categories..." onkeyup="searchCategories()">
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="categories-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Category Name</th>
                                <th>Slug</th>
                                <th>Description</th>
                                <th>Product Actions</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var categories in Model)
                            {
                                var description = categories.Description;
                                if (categories.Description.Length > 30)
                                {
                                    description = categories.Description.Substring(0, 30);
                                    description += "...";
                                }
                                <tr>
                                    <td>@categories.Id</td>
                                    <td><img src="~/CategoryImages/@categories.Image" height="100" /></td>
                                    <td>@categories.Name</td>
                                    <td>@categories.Slug</td>
                                    <td>@description</td>
                                    <td>
                                        <button class="btn-view-products" onclick="openProductsModal(@categories.Id, '@categories.Name')">
                                            <i class="fas fa-box-open"></i> View Products
                                        </button>
                                    </td>
                                    <td>
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@categories.Id" class="btn btn-warning btn-sm">Edit</a>
                                        <button class="isActive btn" data-id="@categories.Id">
                                            @(categories.IsActive ? "Active" : "Inactive")
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state" id="allEmptyState">
                    <i class="fas fa-folder-open"></i>
                    <h3>No categories found</h3>
                    <p>Add your first category using the "Add Category" button.</p>
                </div>
            }

            <div class="pagination" id="pagination" style="display: none;">
                <button onclick="changePage(-1)"><i class="fas fa-chevron-left"></i></button>
                <button class="active">1</button>
                <button>2</button>
                <button>3</button>
                <button onclick="changePage(1)"><i class="fas fa-chevron-right"></i></button>
            </div>
        </div>
    </div>


<!-- Products Modal -->
<div class="products-modal" id="productsModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3><i class="fas fa-boxes"></i> Products in <span id="modalCategoryName"></span></h3>
            <button class="modal-close" onclick="closeProductsModal()">&times;</button>
        </div>
        <div class="modal-body" id="modalBody">
            <!-- Products will be loaded here dynamically -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $(".isActive").on("click", function () {
            let btn = $(this);
            let categoryId = btn.data("id");

            $.ajax({
                url: "/Category/CheckActive",
                type: "POST",
                data: { categoryId: categoryId },
                success: function (response) {
                    if (response.success) {
                        showNotification(response.message, "success");
                        if (response.isActive) {
                            btn.text("Active");
                            btn.removeClass("btn-danger")
                              .addClass("btn-success");
                        } else {
                            btn.text("Inactive");
                            btn.removeClass("btn-success")
                              .addClass("btn-danger");
                        }
                    } else {
                        showNotification(response.message, "warning");
                    }
                }
            });
        });
    });

    function openProductsModal(categoryId, categoryName) {
        $('#modalCategoryName').text(categoryName);
        $('#productsModal').fadeIn();

        // Show loading state
        $('#modalBody').html(`
            <div style="text-align: center; padding: 50px;">
                <i class="fas fa-spinner fa-spin fa-3x" style="color: var(--primary);"></i>
                <p style="margin-top: 20px; color: #666;">Loading products...</p>
            </div>
        `);

        // Load products via AJAX
        $.ajax({
            url: '/Category/GetProductsByCategory',
            type: 'GET',
            data: { categoryId: categoryId },
            success: function(response) {
                $('#modalBody').html(response);
            },
            error: function() {
                $('#modalBody').html(`
                    <div class="empty-products">
                        <i class="fas fa-exclamation-circle"></i>
                        <h3>Error Loading Products</h3>
                        <p>Failed to load products. Please try again.</p>
                    </div>
                `);
            }
        });
    }

    function closeProductsModal() {
        $('#productsModal').fadeOut();
    }

    // Close modal when clicking outside
    $(document).on('click', function(e) {
        if ($(e.target).hasClass('products-modal')) {
            closeProductsModal();
        }
    });

    // Close modal with Escape key
    $(document).on('keydown', function(e) {
        if (e.key === 'Escape' && $('#productsModal').is(':visible')) {
            closeProductsModal();
        }
    });
</script>

<script src="~/admin/category.js"></script>