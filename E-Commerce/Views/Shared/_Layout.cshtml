@{
    Settings settings = await SettingsService.GetSettingsAsync();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Elegant Stitch</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/user/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/user/cart.css" asp-append-version="true">
    <link rel="stylesheet" href="~/user/modal.css" asp-append-version="true">
    <script src="~/user/notification/notification.js"></script>
    <script src="~/user/notification/confirmation.js" defer></script>

    @* <script src="~/notification.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header -->
    <header id="header">
        <div class="header-container">
            <a href="/" class="logo">
                <img src="@settings.StoreLogoUrl" height="50" width="50" class="fas fa-vest" />@settings.StoreName.Split(" ")[0]<span>@settings.StoreName.Split(" ")[1]</span>
            </a>

            <div class="menu-toggle" id="menuToggle">
                <i class="fas fa-bars"></i>
            </div>

            <nav id="navMenu">
                <ul>
                    <li><a href="/" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">Home</a></li>
                    <li><a asp-controller="Home" asp-action="Collections" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Collections" ? "active" : "")">Collections</a></li>
                    <li><a asp-controller="Home" asp-action="Featured" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Featured" ? "active" : "")">Featured</a></li>
                    <li><a href="#">New Arrivals</a></li>
                    <li><a asp-controller="Home" asp-action="Sales" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Sales" ? "active" : "")">Sale</a></li>
                    <li><a asp-controller="Home" asp-action="About" class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")">About</a></li>
                </ul>
            </nav>

            <div class="header-icons">
                @if (ViewContext.RouteData.Values["Action"].ToString() == "Collections" ||
                ViewContext.RouteData.Values["Action"].ToString() == "Featured" ||
                ViewContext.RouteData.Values["Action"].ToString() == "Sales")
                {
                    <div class="header-search-container">
                        <div class="search-wrapper">
                            <a href="#" class="search-icon" id="searchToggle">
                                <i class="fas fa-search"></i>
                            </a>

                            <!-- Search Modal/Dropdown -->
                            <div class="search-modal" id="searchModal">
                                <div class="search-modal-content">
                                    <div class="search-header">
                                        <h3><i class="fas fa-search"></i> Search Products</h3>
                                        <button class="close-search" id="closeSearch">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>

                                    <div class="search-input-container">
                                        <div class="search-input-group">
                                            <i class="fas fa-search search-input-icon"></i>
                                            <input type="text"
                                                   id="searchInput"
                                                   placeholder="Search by product name, description, fabric, color, occasion..."
                                                   autocomplete="off">
                                            <button class="clear-search" id="clearSearch">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>

                                        <!-- Search Filters -->
                                        <div class="search-filters">
                                            <div class="filter-group">
                                                <label for="searchCategory">
                                                    <i class="fas fa-filter"></i> Filter by:
                                                </label>
                                                <select id="searchCategory">
                                                    <option value="">All Categories</option>
                                                    @foreach (var category in await GetCategoriesForSearch())
                                                    {
                                                        <option value="@category.Id">@category.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Search Results -->
                                    <div class="search-results-container">
                                        <div class="search-results-header">
                                            <h4 id="searchResultsTitle">Type to search products...</h4>
                                            <div class="search-stats">
                                                <span id="searchResultsCount">0 results</span>
                                                <span id="searchTime" style="display: none;">in 0.0s</span>
                                            </div>
                                        </div>

                                        <div class="search-results" id="searchResults">
                                            <!-- Results will be loaded here -->
                                            <div class="no-results">
                                                <div class="no-results-icon">
                                                    <i class="fas fa-search"></i>
                                                </div>
                                                <h4>Start Typing to Search</h4>
                                                <p>Search for products by name, description, fabric, occasion, or color</p>
                                            </div>
                                        </div>

                                        <!-- Loading Indicator -->
                                        <div class="search-loading" id="searchLoading" style="display: none;">
                                            <div class="loading-spinner">
                                                <i class="fas fa-spinner fa-spin"></i>
                                            </div>
                                            <p>Searching...</p>
                                        </div>

                                        <!-- Search Tips -->
                                        <div class="search-tips">
                                            <h5><i class="fas fa-lightbulb"></i> Search Tips:</h5>
                                            <ul>
                                                <li>Try searching by product name (e.g., "Anarkali", "Sherwani")</li>
                                                <li>Search by fabric (e.g., "Silk", "Cotton")</li>
                                                <li>Search by occasion (e.g., "Wedding", "Party")</li>
                                                <li>Search by color (e.g., "Red", "Blue", "Gold")</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @functions {
                    private async Task<List<Category>> GetCategoriesForSearch()
                    {
                        // You might want to cache this
                        return await GetCategories.GetCategoriesAsync();
                    }
                }

                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Login" class="user-icon"><i class="fas fa-user"></i></a>
                }
                else
                {
                    <div class="user-dropdown">
                        <a href="#" class="user-profile">
                            <i class="fas fa-user-circle"></i>
                            <span class="user-name">@User.Identity.Name</span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <div class="dropdown-menu">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Admin" asp-action="Index" class="dropdown-item">
                                    <i class="fas fa-user"></i> My Dashboard
                                </a>
                            }
                            <a asp-controller="Profile" asp-action="Index" class="dropdown-item">
                                <i class="fas fa-user"></i> My Profile
                            </a>
                            <a asp-controller="Order" asp-action="MyOrders" class="dropdown-item">
                                <i class="fas fa-shopping-bag"></i> My Orders
                            </a>
                            <div class="dropdown-divider"></div>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item logout-btn">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                        </div>
                    </div>
                }

                @await Component.InvokeAsync("CartCount")
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-col">
                <h3>@settings.StoreName</h3>
                <p>@settings.StoreDescription</p>
                <div class="social-icons">
                    <a href="@settings.FacebookUrl"><i class="fab fa-facebook-f"></i></a>
                    <a href="@settings.InstagramUrl"><i class="fab fa-instagram"></i></a>
                    <a href="@settings.YouTubeUrl"><i class="fa fa-youtube"></i></a>
                    <a href="@settings.TwitterUrl"><i class="fab fa-twitter"></i></a>
                </div>
            </div>

            <div class="footer-col">
                <h3>Quick Links</h3>
                <a href="/">Home</a><br>
                <a asp-controller="Home" asp-action="Collections">Collections</a><br>
                <a asp-controller="Home" asp-action="Featured">Featured</a><br>
                <a href="#">New Arrivals</a><br>
                <a asp-controller="Home" asp-action="Sales">Sale</a>
            </div>

            <div class="footer-col">
                <h3>Customer Service</h3>
                <a asp-controller="Contact" asp-action="Index">Contact Us</a><br>
                <a href="#">FAQs</a><br>
                <a href="#">Shipping Policy</a><br>
                <a href="#">Return & Exchange</a><br>
                <a href="#">Size Guide</a>
            </div>

            <div class="footer-col">
                <h3>Contact Info</h3>
                <p><i class="fas fa-map-marker-alt"></i> @settings.StoreAddress</p>
                <p><i class="fas fa-phone"></i> @settings.ContactPhone</p>
                <p><i class="fas fa-envelope"></i> @settings.ContactEmail</p>
            </div>
        </div>

        <div class="copyright">
            <p>&copy; @DateTime.Now.Year Elegant Stitch. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/user/script.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>