<div id="customConfirmModal" class="custom-modal">
    <div class="modal-overlay"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="confirmModalTitle">Confirmation</h3>
            <button class="close-confirm-modal">&times;</button>
        </div>
        <div class="modal-body">
            <div class="confirm-icon">
                <i class="fas fa-question-circle"></i>
            </div>
            <p id="confirmModalMessage">Are you sure you want to proceed?</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" id="confirmCancelBtn">
                <i class="fas fa-times"></i> Cancel
            </button>
            <button class="btn-confirm" id="confirmOkBtn">
                <i class="fas fa-check"></i> Confirm
            </button>
        </div>
    </div>
</div>