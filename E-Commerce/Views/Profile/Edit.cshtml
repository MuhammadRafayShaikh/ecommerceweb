@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Profile";
}
@model E_Commerce.ViewModels.ProfileViewModel

<link rel="stylesheet" href="~/user/profile/profile.css" asp-append-version="true">

<div class="edit-profile-container">
    <div class="edit-header">
        <a href="@Url.Action("Index", "Profile")" class="btn-back">
            <i class="fas fa-arrow-left"></i> Back to Profile
        </a>
        <h1><i class="fas fa-user-edit"></i> Edit Profile</h1>
        <p>Update your personal information</p>
    </div>

    <div class="edit-content">
        <form asp-action="Edit" method="post" class="edit-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserName"/>
            <div class="form-grid">
                <!-- Left Column -->
                <div class="form-column">
                    <!-- Basic Information Card -->
                    <div class="form-card">
                        <div class="card-header">
                            <i class="fas fa-id-card"></i>
                            <h3>Basic Information</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <div class="input-with-icon">
                                    <i class="fas fa-user"></i>
                                    <input asp-for="FirstName" placeholder="Enter your first name">
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <div class="input-with-icon">
                                    <i class="fas fa-user"></i>
                                    <input asp-for="LastName" placeholder="Enter your last name">
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <div class="input-with-icon">
                                    <i class="fas fa-envelope"></i>
                                    <input asp-for="Email" type="email" placeholder="Enter your email">
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                @if (!Model.EmailConfirmed)
                                {
                                    <div class="email-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        <span>Email not verified. You'll receive a verification email after updating.</span>
                                    </div>
                                }
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <div class="input-with-icon">
                                    <i class="fas fa-phone"></i>
                                    <input asp-for="PhoneNumber" placeholder="Enter your phone number">
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Account Information Card -->
                    
                </div>
                
                <!-- Right Column -->
                <div class="form-column">
                    <!-- Password Change Card -->
                    <div class="form-card">
                        <div class="card-header">
                            <i class="fas fa-user-cog"></i>
                            <h3>Account Information</h3>
                        </div>
                        <div class="card-body">
                            <div class="info-item">
                                <span class="info-label">Username:</span>
                                <span class="info-value">@Model.UserName</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Account Created:</span>
                                <span class="info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Last Updated:</span>
                                <span class="info-value">@(Model.UpdatedAt?.ToString("MMMM dd, yyyy") ?? "Never")</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Status:</span>
                                <span class="info-value status-active">@Model.Status</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Save Changes Card -->
                    <div class="form-card">
                        <div class="card-header">
                            <i class="fas fa-save"></i>
                            <h3>Save Changes</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-note">
                                <i class="fas fa-info-circle"></i>
                                <p>Make sure all information is correct before saving changes.</p>
                            </div>
                            
                            <div class="form-actions">
                                <a href="@Url.Action("Index", "Profile")" class="btn-cancel">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                                <button type="submit" class="btn-save">
                                    <i class="fas fa-save"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/user/profile/profile.js"></script>